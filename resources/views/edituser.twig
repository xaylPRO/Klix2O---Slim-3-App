{% extends "templates/dashboard.twig" %}


{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Article id: {{result['id']}}</h1>
    </div>
    <form action='/dashboard/users/edit' method='post'>
    <input type='hidden' name='id' value='{{ result['id'] }}'>

    <div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon1">Username</span>
  </div>
  <input type="text" class="form-control" name='username' value={{ result['username'] }} aria-label="Username" aria-describedby="basic-addon1">
</div>

<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon1">E-mail</span>
  </div>
  <input type="email" class="form-control" name='email' value={{ result['email'] }} aria-label="Username" aria-describedby="basic-addon1">
</div>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon1">Password</span>
  </div>
  <input type="password" class="form-control" name='password' value={{ result['password'] }} aria-label="Username" aria-describedby="basic-addon1">
</div>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon1">First Name</span>
  </div>
  <input type="text" class="form-control" name='fName' value={{ result['fName'] }} aria-label="Username" aria-describedby="basic-addon1">
</div>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon1">Last Name</span>
  </div>
  <input type="text" class="form-control" name='lName' value={{ result['lName'] }} aria-label="Username" aria-describedby="basic-addon1">
</div>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon1">Status</span>
  </div>
  <input type="text" class="form-control" name='status' value={{ result['status'] }} aria-label="Username" aria-describedby="basic-addon1">
</div>

    <br><br>
    <button style='float: right;' class='btn btn-success' type='submit'>Save changes</button>
    <br><br>
    </form>
{% endblock %}